= render @job

- content_for :content do
  - case step
  - when 'details'
    = render 'steps/detailsEdit'

  - when 'research'
    = render 'steps/researchEdit'

  - when 'networking'
    = render 'steps/networkingEdit'

  - when 'documents'
    = render 'steps/documentsEdit'

  - when 'apply'
    = render 'steps/applyEdit'

  - when 'interview'
    = render 'steps/interviewEdit'
