%section
  %h2= @job.title
  %h3= @job.company_name

%header
  %h1
    =t('job_steps.label')

= link_to content_job_path({step: "details"}) do
  %section.step_title.job_entry_item
    %div.number_title
      %h3 1
    %h2
      =t('job_steps.details.label')

= link_to content_job_path({step: "research"}) do
  %section.step_title.job_entry_item
    %div.number_title
      %h3 2
    %h2
      =t('job_steps.research.label')

%section
  %p
    = link_to t('job.delete'), job_path(@job), method: :delete, data: { confirm: t('job.delete_confirmation') }
