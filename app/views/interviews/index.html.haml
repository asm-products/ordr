%h1 Listing interviews
%table
  %thead
    %tr
      %th Type
      %th Thank you
      %th{:colspan => "3"}
  %tbody
    - @interviews.each do |interview|
      %tr
        %td
          = interview.type
        %td
          = interview.thank_you
        %td
          = link_to 'Edit', edit_job_interview_path(@job, interview)
          = link_to "new contact", new_job_interview_contact_path(@job, interview)
          = link_to "new note", new_job_interview_note_path(@job, interview)

        %table
          %tr
            %td
              %table
                %tbody
                  - interview.contacts.each do |contact|
                    %tr
                      %td
                        =link_to contact.name, edit_job_interview_contact_path(@job, interview, contact)
                  - interview.notes.each do |note|
                    %tr
                      %td
                        Note: #{note.content}
                      %td= link_to 'Edit', edit_job_interview_note_path(@job, interview, note)
                      %td= link_to 'Delete', job_interview_note_path(@job, interview, note), method: :delete, data: { confirm: 'Are you sure?' }
                      %td= link_to 'Edit', edit_job_interview_path(@job, network)

    = button_to 'New Interview', job_interviews_path(@job, Interview.new, :interview => {job_id: @job.id}), :method => :post
