%p#notice
  .alert-bad
    = alert
  .alert-good
    = notice

- if current_user
  = link_to "Profile", user_path(current_user)
  = link_to "Sign out", "logout"
- unless current_user
  = form_tag do
    =label_tag :email
    =text_field_tag :email
    <br/>
    =label_tag :password
    =password_field_tag :password
    <br/>
    =submit_tag "Sign in"
  %button#create_pw
    = link_to "Sign Up", new_user_path
  %button#linkedin
    = link_to "Sign in with linkedin", "/auth/linkedin"
