
- if current_user
  = link_to "Profile", user_path(current_user), class: 'primary_button'
  = link_to I18n.t('session.new_session.sign_out'), "logout", class: 'secondary_button'
- unless current_user
  = form_tag do
    =label_tag :email, I18n.t('user.email')
    =text_field_tag :email
    <br/>
    =label_tag :password, I18n.t('user.password')
    =password_field_tag :password
    <br/>
    =submit_tag I18n.t('session.new_session.sign_in'), class: 'primary_button'
  %button#create_pw.primary_button
    = link_to I18n.t('session.new_session.sign_up'), new_user_path
