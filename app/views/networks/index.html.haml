%h1 Listing networks
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @networks.each do |network|
      %tr
      %td
        = link_to 'Edit', edit_job_network_path(@job, network)
        = link_to "new contact", new_job_network_contact_path(@job, network)
        = link_to "new note", new_job_network_note_path(@job, network)
      %td
        = network.date
      %td
        = network.time
        %table
          %tr
            %td
              %table
                %tbody
                  - network.contacts.each do |contact|
                    %tr
                      %td
                      =link_to contact.name, edit_job_network_contact_path(@job, network, contact)
                  - network.notes.each do |note|
                    %tr
                      %td
                        Note: #{note.content}
                      %td= link_to 'Edit', edit_job_network_note_path(@job, network, note)
                      %td= link_to 'Delete', job_network_note_path(@job, network, note), method: :delete, data: { confirm: 'Are you sure?' }
                      %td= link_to 'Edit', edit_job_network_path(@job, network)

    = button_to 'New network', job_networks_path(@job, Network.new, :network => {job_id: @job.id}), :method => :post
