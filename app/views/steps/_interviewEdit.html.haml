%header.content_header.outer_container
  %article.steptitle_grid.steptitle_flex
    %section.steptitle_width
      %div.number
        %h2 6
      %h1
        = t('job_steps.interview.label')
    = link_to content_edit_job_path({step: 'interview'}) do
      %button.add_button
        = image_tag "edit_icon.svg", size: "20"
    = link_to content_edit_job_path({step: 'interview'}) do
      %button.add_button
        = image_tag "add_note_icon.svg", size: "20"
    = link_to content_edit_job_path({step: 'interview'}) do
      %button.add_button
        = image_tag "add_contact_icon.svg", size: "20"

%article.outer_container
  %section.step_content
    = form_for @job do |g|
      = g.fields_for @job.interview do |f|
        = f.radio_button :type, 'phone'
        = f.label :type_phone, "Phone Interview"
        = f.radio_button :type, 'video'
        = f.label :type_video, "Video Interview"
        = f.radio_button :type, 'person'
        = f.label :type_person, "In-Person Interview"
        = f.radio_button :type, 'other'
        = f.label :type_other, "Other"
        = f.label :date
        = f.date_field :date
      = g.submit "Save", {class: 'primary_button'}
