%header.content_header.outer_container
  %section.step_content
    %div.number
      %h2 1
    %h1
      = t('job_steps.details.label')
    = link_to content_edit_job_path({step: 'details'}) do
      %button.add_button
        = image_tag "edit_icon.svg", size: "17"

// Labels/detail
%article.outer_container
  %section.step_content
    %label Job title
    %p
      = @job.title
    %label Job posting URL
    %p
      = @job.url
    %label Company name
    %p
      = @job.company_name
    %label URL
    %p
      = @job.url
    %label Apply by:
    %p
      = @job.due_date
    %label How did you find this job?
    %p
      = @job.type
